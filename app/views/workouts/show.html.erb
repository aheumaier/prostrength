<div class="card">
  <div class="card-body">
    <h5 class="card-title"><%= @workout.title %></h5>
    <h6 class="card-subtitle mb-2 text-muted"><%= @workout.created_at %></h6>
    <p class="card-text"><%= @workout.notes %></p>
  </div>
</div>

<br>
<div class="table-responsive">
  <table class="table">
    <thead class="table-dark">
      <tr>
        <th>Exercise</th>
        <th>Repetitions</th>
        <th>Tempo</th>
        <th>Pause</th>
      </tr>
    </thead>
    <tbody>
      <% @workout.workout_sets.each do |set| %>
        <tr>
          <td><%= set.exercise.title %></td>
          <td><%= set.repetition %></td>
          <td><%= set.tempo %></td>
          <td><%= set.pause %></td>
        </tr>
      <% end %>
    </tbody>

  </table>
</div>
<br>

<div class="float-end">
  <%= link_to '<i class="bi bi-pencil-square"></i>'.html_safe, edit_workout_path(@workout), :class => "btn btn-outline-primary" %>
  <%= link_to '<i class="bi bi-arrow-return-left"></i>'.html_safe, workouts_path, :class => "btn btn-outline-primary"%>

</div>

<div class="float-start">
  <%= button_to "Delete", @workout, method: :delete, :class => "btn btn-danger" %>
</div>
