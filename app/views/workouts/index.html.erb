<h1>Workouts</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Created</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @workouts.each do |workout| %>
      <tr>
        <%= render workout %>
        <td>
          <%= link_to '<i class="bi bi-eye"></i>'.html_safe, workout %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<br>

<div class="btn btn-outline-primary">
  <i class="bi bi-plus" aria-hidden="true"></i>
  <%= link_to "New Workout", new_workout_path,  :class => "btn" %>
</div>
