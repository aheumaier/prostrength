<% if current_user.user? %>
  <div class="card">
    <div class="card-body">
      <h5 class="card-title">Coach <%= current_user.coach.username %></h5>
      <h6 class="card-subtitle mb-2 text-muted"><%= current_user.coach.email %></h6>
      <p class="card-text">Since: <%= current_user.coach.profile.about_me %></p>
    </div>
  </div>
  <br>
<% end %>

<h1> My Week  </h1>
<%= week_calendar(events: @trainings ) do |date, trainings| %>
  <%= date.to_formatted_s(:short) %>
  <br>
  <% trainings.each do |tr| %>
    <b><%= link_to tr.workout.title, training_session_path(tr) %></b><br>
  <% end %>

<% end %>

<br>

<% if current_user.coach? %>
  <h1> My Customers</h1>
  <div class="table-responsive">
    <table class="table">
      <thead class="table-header">
        <tr>
          <td>Name</td>
          <td>Email</td>
          <td>Apointment</td>
        </tr>
      </thead>
      <tbody>
        <% @customers.each do |customer|%>
          <tr>
            <td><%= customer.username %></td>
            <td><%= customer.email %></td>
            <td><%= customer.training_sessions.size %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <br>
<% end %>

<div class="btn btn-outline-primary">
  <i class="bi bi-plus" aria-hidden="true"></i>
  <%= link_to "New Training", new_training_session_path,  :class => "btn" %>
</div>
