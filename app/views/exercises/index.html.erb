<p style="color: green"><%= notice %></p>

<h1>Exercises</h1>

<div id="exercises">
  <table class="table">
    <theaders>
      <th>
        Name
      </th>
      <th>
        Description 
      </th>
      <th>
      </th>
    </theaders>
    <tbody>
      <% @exercises.each do |exercise| %>
        <tr>
          <td><%= exercise.title%></td>
          <td><%= exercise.notes %></td>
          <td>
            <%= link_to '<i class="bi bi-eye"></i>'.html_safe, exercise %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="btn btn-outline-primary">
  <i class="bi bi-plus" aria-hidden="true"></i>
  <%= link_to "New Exercise", new_exercise_path,  :class => "btn" %>
</div>
